<h1>New Article</h1>

<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :published_date %><br>
    <%= form.date_field :published_date %>
  </div>

  <div>
    <%= form.label :is_published %><br>
    <%= form.text_field :is_published %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
